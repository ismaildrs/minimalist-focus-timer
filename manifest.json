{
    "manifest_version": 3,
    "name": "Pomodoro Focus Timer",
    "description": "A minimalist Pomodoro Timer extension",
    "version": "0.3",
    "background": {
        "service_worker": "scripts/background/bgLoader.js"
    },
    "permissions": [
        "alarms",
        "storage",
        "notifications",
        "offscreen"
    ],
    "action": {
        "default_popup": "index.html"
    },
    "icons": {
        "32": "assets/icons/32.png",
        "48": "assets/icons/48.png",
        "96": "assets/icons/96.png",
        "128": "assets/icons/128.png"
    },
    "web_accessible_resources": [
        {
            "resources": [],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}